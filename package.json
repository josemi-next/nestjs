{
	"name": "nestjs-shared",
	"version": "1.1.1",
	"description": "Components and libraries shared among applications with NestJS",
	"scripts": {
		"build": "tsc",
		"preexport": "npm run build",
		"export": "npm pack",
		"prepare": "husky install && run-script-os",
		"prepare:linux": "chmod ug+x .husky/*",
		"release:initialize": "commit-and-tag-version --first-release",
		"release:dry": "commit-and-tag-version --dry-run",
		"release": "commit-and-tag-version"
	},
	"repository": "https://github.com/josemi-next/nestjs-shared",
	"license": "MIT",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"dependencies": {
		"jsonwebtoken": "9.0.0",
		"kafkajs": "2.2.4",
		"uuid-random": "1.3.2"
	},
	"devDependencies": {
		"@commitlint/cli": "17.6.1",
		"@commitlint/config-conventional": "17.6.1",
		"@nestjs/common": "9.4.0",
		"@nestjs/core": "9.4.0",
		"@types/node": "18.15.11",
		"@typescript-eslint/eslint-plugin": "5.59.0",
		"commit-and-tag-version": "11.2.1",
		"cz-conventional-changelog": "3.3.0",
		"eslint": "8.38.0",
		"eslint-config-prettier": "8.8.0",
		"eslint-config-standard-with-typescript": "34.0.1",
		"eslint-plugin-import": "2.27.5",
		"eslint-plugin-n": "15.7.0",
		"eslint-plugin-promise": "6.1.1",
		"husky": "8.0.3",
		"lint-staged": "13.2.1",
		"prettier": "2.8.7",
		"run-script-os": "1.1.6",
		"typescript": "5.0.4"
	},
	"lint-staged": {
		"src/**/*.{js,ts}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{md,html,json}": "prettier --write"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"commit-and-tag-version": {
		"skip": {
			"commit": true
		}
	}
}
